<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_mainTile"
            android:layout_width="46.5dp"
            android:layout_height="46.5dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="#000000" />

		<LinearLayout
		    android:layout_width="204dp"
		    android:layout_height="wrap_content"
		    android:gravity="center_vertical"
		    android:orientation="vertical" 
		    android:layout_weight="4"
		    >

	        <TextView
	            android:id="@+id/txt_tile"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical"
	            android:text="test"
	            android:textSize="20dp"
	            android:textStyle="bold"
	            android:typeface="sans" />

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="30dp"
		        android:gravity="center_vertical"
		        android:orientation="horizontal" >

		        <TextView
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:id="@+id/txt_artistName"
		            android:text="test"
					android:layout_weight="4"
		            />

		        <ImageView
		            android:id="@+id/img_thumb"
		            android:layout_width="50dp"
		            android:layout_height="39dp"
		            android:layout_alignRight="@+id/txt_thumbCnt"
		            android:layout_marginRight="5dp"
		            android:layout_weight="1"
		            android:src="@drawable/likeinactive" />

		        <TextView
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:id="@+id/txt_likesCnt"
		            android:layout_weight="4"
		            android:text="test"
		
		            />
	        </LinearLayout>
        </LinearLayout>

		<ImageView
		    android:id="@+id/img_arrow"
		    android:layout_width="20dp"
		    android:layout_height="20dp"
		    android:layout_weight="0.5"
		    android:src="@drawable/iconarrows" />

    </LinearLayout>

</RelativeLayout>
