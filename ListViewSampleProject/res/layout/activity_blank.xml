<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.kdc.minhonoh.nmhproject.BlankActivity"
    android:id="@+id/blankLayout"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="2dp"
            android:background="#01A7B0"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="changeMainBackColor"/>
        <ImageView
            android:id="@+id/img_2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="2dp"
            android:background="#2F00FF"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="changeMainBackColor"/>
        <ImageView
            android:id="@+id/img_3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="2dp"
            android:background="#3AAD00"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="changeMainBackColor"/>
        <ImageView
            android:id="@+id/img_4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="2dp"
            android:background="#FA68CA"
            android:layout_weight="1"
            android:onClick="changeMainBackColor"
            />
    </LinearLayout>

</RelativeLayout>
