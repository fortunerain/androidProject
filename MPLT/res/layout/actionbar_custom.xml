<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actionBar_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
 
    <ImageView
        android:id="@+id/actionBar_image_auth"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="9dp"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:longClickable="false"
        android:contentDescription="@string/actionBar_image_auth"/>
    
    
    <TextView 
        android:id="@+id/actionBar_text_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/actionBar_image_auth"
        android:layout_centerVertical="true"
        android:textSize="9pt"
        />
	
    <TextView 
        android:id="@+id/actionBar_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:textSize="10pt"
        android:textStyle="bold"
        android:text="@string/actionbar_title"
        />
    <ImageView
        android:id="@+id/actionBar_image_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="17.5dp"
        android:clickable="true"
        android:focusable="false"
        android:longClickable="false"
        android:contentDescription="@string/actionBar_image_right" />

    

</RelativeLayout>