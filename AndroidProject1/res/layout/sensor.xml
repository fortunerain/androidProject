<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent" >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingRight="5px" >

    <TextView
        android:id="@+id/sensor_textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/sensor_textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="100"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/sensor_textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="ACCELEROMETER" />

        <TextView
            android:id="@+id/sensor_textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="MAGNETIC FIELD" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="100"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/accelerometer_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="right"
            android:text="TextView" />

        <TextView
            android:id="@+id/magnetic_field_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="right"
            android:text="TextView" />

    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="100"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/sensor_textView9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="ORIENTATION" />

        <TextView
            android:id="@+id/sensor_textView10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="GYROSCOPE" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="100"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/orientation_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="right"
            android:text="TextView" />

        <TextView
            android:id="@+id/gyroscope_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="right"
            android:text="TextView" />

    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="100"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/sensor_textView13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="LIGHT" />

        <TextView
            android:id="@+id/sensor_textView14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="PROXIMITY" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="100"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/light_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="right"
            android:text="TextView" />

        <TextView
            android:id="@+id/proximity_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="right"
            android:text="TextView" />

    </LinearLayout>
    

</LinearLayout>
</ScrollView>
