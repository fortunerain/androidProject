<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.accenture.kdc.minhonoh.MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20pt"
        android:textColor="#000000"
        android:text="핸드폰 테스트" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:weightSum="100">
		
		<Button
		    android:id="@+id/screenTestMenuBtn"
		    android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:onClick="goSubMenu"
		    android:text="화면 테스트" />

		<TextView
		    android:id="@+id/textView2"
		    android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
		    android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:weightSum="100">

        <TextView
		    android:id="@+id/textView3"
		    android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
		    android:text="" />

        <Button
            android:id="@+id/soundTestMenuBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:onClick="goSubMenu"
            android:text="알림 테스트" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:weightSum="100">

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:onClick="gpsTest"
            android:text="GPS 테스트" />

        <TextView
		    android:id="@+id/textView4"
		    android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
		    android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:weightSum="100">

        <TextView
		    android:id="@+id/textView5"
		    android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
		    android:text="" />

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:onClick="cameraTest"
            android:text="카메라 테스트" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:weightSum="100">
		
        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:onClick="sensorTest"
            android:text="센서 테스트" />
        
        <TextView
		    android:id="@+id/textView6"
		    android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
		    android:text="" />
        
    </LinearLayout>   
    
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:weightSum="100">
		
	    <TextView
		    android:id="@+id/textView7"
		    android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
		    android:text="" />
        
        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:onClick="basicInfomation"
            android:text="개발자 정보" />
        
    </LinearLayout>

</LinearLayout>